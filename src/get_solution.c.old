void	place_tetri(char ***map, t_list *tetri)
{
	t_tetri		*data;
	
	while (tetri != null)
	{
		data = (t_tetri *)tetri->content;
		test_insert(map, data->tetri, data->x, data->y);
		tetri = tetri->next;
	}
}

char 	**init_map(int size)
{
	char	**map;
	int		x;

	x = -1;
	map = (char **)malloc(sizeof(char *) * size);
	while (++x < size)
	{
		map[x] = (char *)malloc(sizeof(char) * size);
		map[x] = ft_memset(map[x], '.', size);
	}
	return (map);
}

void	free_map(char **map, int size)
{
	int i;

	i = -1;
	while (++i < size)
	{
		free(map[i]);
	}
	free(map);
	map = NULL;
}

void	get_solution(t_list *tetri)
{
	char	**map;
	int		i;
	int		j;
	int		size;

	(void)tetri;
	size = 14;
	map = init_map(size);
	place_tetri(&map, tetri);
//	ret = set_ret(tetri);
	i = -1;
	while (++i < size)
	{
		j = -1;
		while (++j < size)
			ft_putchar(map[i][j]);
		ft_putchar('\n');
	}
	free_map(map, size);
}
